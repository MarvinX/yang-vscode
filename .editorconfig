# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.yaml]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2

[*.yang]
indent_style = space
indent_size = 4

[{*.ts,*.js}]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 4

[*.tmLanguage.json]
indent_style = tab
indent_size = 4
